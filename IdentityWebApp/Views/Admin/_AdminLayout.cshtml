<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - IdentityWebApp</title>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="~/lib/jquery-validate/jquery.validate.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <link href="~/lib/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />

</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="#">blabla.com</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Admin" asp-action="Index">Admin Ana Sayfa </a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Member" asp-action="Index">Member Ana Sayfa </a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <div class="container" style="margin-top:10px">
        <div class="row">
            <div class="col-md-8">
                @RenderBody()
            </div>
            <div class="col-md-4">
                <h3>Menü</h3>
                <a class="btn btn-info btn-block" asp-controller="Admin" asp-action="Users">Üyeler </a>
                <a class="btn btn-info btn-block" asp-controller="Admin" asp-action="Roles">Roller </a>
                <a class="btn btn-info btn-block" asp-controller="Admin" asp-action="Claims">Üye Claims </a>
                <a class="btn btn-info btn-block" asp-controller="Admin" asp-action="Logout">Çıkış Yap </a>
            </div>
        </div>

    </div>
</body>
</html>